<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_shape"
            android:backgroundTint="@color/creative_red"
            android:text="Contact Us"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:drawableRight="@drawable/help"
            android:drawableTint="@color/white"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_shape"
            android:backgroundTint="@color/twitter_color"
            android:text="Share"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:drawableRight="@drawable/share"
            android:drawableTint="@color/white"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_shape"
            android:backgroundTint="@color/teal_700"
            android:text="AboutUs"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:drawableRight="@drawable/about"
            android:drawableTint="@color/white"
            android:drawablePadding="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

      <LinearLayout
          android:id="@+id/cbse_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:orientation="vertical"
          android:backgroundTint="@color/creative_red"
          android:background="@drawable/widget_shape">

          <ImageView
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:src="@drawable/a"
              app:tint="@color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="CBSE Board"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:textAlignment="center"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:fontFamily="serif"/>

      </LinearLayout>

        <LinearLayout
            android:id="@+id/up_layout"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:backgroundTint="@color/creative_red"
            android:background="@drawable/widget_shape">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:src="@drawable/hindi_a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP Board"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>